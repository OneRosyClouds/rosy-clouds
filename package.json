{
  "name": "rosy-clouds",
  "type": "module",
  "version": "0.0.18",
  "packageManager": "pnpm@7.1.2",
  "description": "",
  "author": "TickHeart",
  "license": "MIT",
  "homepage": "https://github.com/OneRosyClouds/rosy-clouds#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OneRosyClouds/rosy-clouds"
  },
  "bugs": {
    "url": "https://github.com/OneRosyClouds/rosy-clouds/issues"
  },
  "keywords": [],
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs.js"
    },
    "./*": "./dist/*"
  },
  "main": "../dist/index.es.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist",
    "dist/*.css"
  ],
  "style": "./dist/index.css",
  "scripts": {
    "add": "esno ./scripts/add/index.ts",
    "stub": "unbuild --stub",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",

    "release": "bumpp --commit --push --tag && npm publish",
    "start": "esno src/index.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install",
    "build": "esno scripts/build/index.ts",
    "build:rollup": "rollup -c rollup.config.js"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.25.2",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@types/execa": "^2.0.0",
    "@types/fs-extra": "^9.0.13",
    "@types/gulp": "^4.0.9",
    "@types/node": "^17.0.45",
    "bumpp": "^7.2.0",
    "eslint": "^8.26.0",
    "esno": "^0.16.3",
    "execa": "^6.1.0",
    "fast-glob": "^3.2.12",
    "fs-extra": "^10.1.0",
    "gulp": "^4.0.2",
    "husky": "^8.0.1",
    "lint-staged": "^12.5.0",
    "pnpm": "^7.14.0",
    "rollup": "^3.2.3",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-dts": "^5.0.0",
    "rollup-plugin-import-css": "^3.1.0",
    "rollup-plugin-typescript2": "^0.31.2",
    "tsup": "^6.2.3",
    "typescript": "^4.8.4",
    "unbuild": "^0.7.6",
    "unplugin-auto-import": "^0.7.2",
    "vitest": "^0.12.10"
  },
  "lint-staged": {
    "*.{js,ts,json,md}": [
      "eslint --fix"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
